---
import { SITE_TITLE } from '../consts';
---

<header>
		<a href="/">{SITE_TITLE}</a>
</header>
<style>
	header {
		margin: 10px;
		padding: 10px;
		height: 50px;
		background-color: rgb(var(--bg-color));
		box-shadow: 0 2px 8px rgba(var(--bg-color), 5%);
	}
	a {
		width: auto;
		color: rgb(var(--fg-color));
		display: flex;
		justify-content: stretch;
		align-items: stretch;
		height:50px;
	}
	a {
		margin: 0;
		font-size: 1em;
	}
</style>
