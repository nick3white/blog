---
import FormattedDate from './FormattedDate.astro';
interface Props {
	slug: string;
	note: {
		title: string;
		description: string;
		pubDate: Date;
		heroImage?: string
	}
}

const { title, description, pubDate } = Astro.props.note;
const { slug  } = Astro.props;
---

<li class="link-card">
	<a href={`/blog/jdc/${ slug }`} class="no-lines">
		<h2>
			{title}
			<span><FormattedDate date={pubDate} /></span>
		</h2>
		<p>
			{description}
		</p>
	</a>
</li>
<style>
.link-card {
	list-style: none;
	display: flex;
	padding: 1px;
	backdrop-filter: saturate(1) blur(16px);
	transition:  0.6s cubic-bezier(0.22, 1, 0.36, 1);
  flex-grow: 1;
  min-width: 25%;
}

@media (max-width: 1200px) {
  .link-card {
    min-width: 33.33%; 
  }
}
.link-card > a {
	width: 100%;
	text-decoration: none;
	line-height: 1.4;
	padding: calc(1.5rem - 1px);
	opacity: 0.8;
}
h2 span {
	text-align: right;
	font-size: 0.77rem;
}	
h2 {
	display: flex;
	justify-content: space-between;
	align-items: center;
gap: 33px;
	width: 100%;
	margin: 0;
	font-size: 1.25rem;
	transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
}
p {
font-size: 0.77rem;
	margin-top: 0.5rem;
	margin-bottom: 0;
}
.link-card:is(:hover, :focus-within) {
	backdrop-filter: saturate(200%) blur(16px);
	border: 1px solid rgba(var(--fg-color),0.77);
}
</style>
